{
  "project": "olgarozet.ru",
  "version": "3.0",
  "type": "website",
  "owner": "olga",
  "repository": "github.com/stasazaryarozet/olgarozet.ru",
  "domain": "olgarozet.ru",
  "hosting": "github-pages",
  "architecture": {
    "pattern": "Static Site Generation",
    "source_of_truth": "content.md",
    "build": "build.py (Python, markdown2)",
    "output": "index.html",
    "css": "style.css (CSS custom properties)",
    "deploy": "GitHub Actions → GitHub Pages"
  },
  "sources_of_truth": {
    "bio": {
      "file": "../bio.txt",
      "description": "Bio текст для Telegram канала и intro сайта",
      "targets": [
        "telegram_channel_about",
        "site_intro"
      ],
      "daemon": "ru.olgarozet.sync"
    },
    "content": {
      "file": "content.md",
      "description": "Весь контент главной страницы",
      "targets": [
        "index.html"
      ],
      "build": "python3 build.py"
    },
    "artworks": {
      "source": "../art/",
      "description": "94 отобранных работы для галереи",
      "target": "art/img/",
      "daemon": "com.dela.art.sync",
      "gate": ".gates/art_gate.py"
    }
  },
  "integrations": {
    "calcom": {
      "status": "active",
      "api_key_location": "github_secrets",
      "event_type": "delo-40min",
      "url": "https://cal.com/olgarozet/delo-40min",
      "schedule_id": 1035314,
      "sync_workflow": "sync-calcom.yml"
    },
    "telegram": {
      "channel": "@olga_rozet",
      "session": "../.gates/telegram_olga_azarya_device.session",
      "sync_daemon": "ru.olgarozet.sync"
    },
    "instagram": {
      "account": "@olga_rozet",
      "link_in_bio": "https://olgarozet.ru"
    },
    "parisinjanuary": {
      "domain": "parisinjanuary.ru",
      "purpose": "Событие Париж 2026"
    }
  },
  "pages": {
    "/": {
      "title": "Ольга Розет",
      "source": "content.md → index.html",
      "build": true
    },
    "/art/": {
      "title": "Искусство",
      "source": "art/index.html (auto-generated by art_gate.py)",
      "artwork_count": 94,
      "shuffle": true
    },
    "/booking/": {
      "title": "Консультация",
      "calcom_embed": true
    },
    "/book/": {
      "redirect": "/booking/"
    }
  },
  "dependencies": {
    "python_packages": [
      "markdown2"
    ],
    "tools": [
      "tools/credentials_master.py",
      "tools/dela_paths.py"
    ],
    "gates": [
      ".gates/art_gate.py",
      ".gates/telegram_olga_azarya_device.session"
    ],
    "daemons": [
      "ru.olgarozet.sync",
      "com.dela.art.sync"
    ]
  },
  "workflows": {
    "deploy.yml": "Build + Deploy to GitHub Pages",
    "sync-calcom.yml": "Sync consultation description to Cal.com"
  },
  "scripts": {
    "build.py": "Generate index.html from content.md",
    "scripts/optimize_images.py": "Optimize art/img/ without quality loss",
    "sync_description.py": "Sync to Cal.com API"
  }
}